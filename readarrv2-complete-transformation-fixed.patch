+import React from 'react';
+import { useSelector } from 'react-redux';
+import Label from 'Components/Label';
+import { kinds, sizes } from 'Helpers/Props';
+import createAuthorQueueItemsDetailsSelector, {
+  AuthorQueueDetails,
+} from 'Author/Index/createAuthorQueueDetailsSelector';
+
+function getEditionCountKind(
+  monitored: boolean,
+  editionFileCount: number,
+  editionCount: number,
+  isDownloading: boolean
+) {
+  if (isDownloading) {
+    return kinds.PURPLE;
+  }
+
+  if (editionFileCount === editionCount && editionCount > 0) {
+    return kinds.SUCCESS;
+  }
+
+  if (!monitored) {
+    return kinds.WARNING;
+  }
+
+  return kinds.DANGER;
+}
+
+interface BookProgressLabelProps {
+  className: string;
+  authorId: number;
+  bookNumber: number;
+  monitored: boolean;
+  editionCount: number;
+  editionFileCount: number;
+}
+
+function BookProgressLabel({
+  className,
+  authorId,
+  bookNumber,
+  monitored,
+  editionCount,
+  editionFileCount,
+}: BookProgressLabelProps) {
+  const queueDetails: AuthorQueueDetails = useSelector(
+    createAuthorQueueItemsDetailsSelector(authorId, bookNumber)
+  );
+
+  const newDownloads = queueDetails.count - queueDetails.editionsWithFiles;
+  const text = newDownloads
+    ? `${editionFileCount} + ${newDownloads} / ${editionCount}`
+    : `${editionFileCount} / ${editionCount}`;
+
+  return (
+    <Label
+      className={className}
+      kind={getEditionCountKind(
+        monitored,
+        editionFileCount,
+        editionCount,
+        queueDetails.count > 0
+      )}
+      size={sizes.LARGE}
+    >
+      <span>{text}</span>
+    </Label>
+  );
+}
+
+export default BookProgressLabel;
