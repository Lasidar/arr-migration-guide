+import React from 'react';
+import { useSelector } from 'react-redux';
+import ProgressBar from 'Components/ProgressBar';
+import { sizes } from 'Helpers/Props';
+import createAuthorQueueItemsDetailsSelector, {
+  AuthorQueueDetails,
+} from 'Author/Index/createAuthorQueueDetailsSelector';
+import { AuthorStatus } from 'Author/Author';
+import getProgressBarKind from 'Utilities/Author/getProgressBarKind';
+import translate from 'Utilities/String/translate';
+import styles from './AuthorIndexProgressBar.css';
+
+interface AuthorIndexProgressBarProps {
+  authorId: number;
+  bookNumber?: number;
+  monitored: boolean;
+  status: AuthorStatus;
+  editionCount: number;
+  editionFileCount: number;
+  totalEditionCount: number;
+  width: number;
+  detailedProgressBar: boolean;
+  isStandalone: boolean;
+}
+
+function AuthorIndexProgressBar(props: AuthorIndexProgressBarProps) {
+  const {
+    authorId,
+    bookNumber,
+    monitored,
+    status,
+    editionCount,
+    editionFileCount,
+    totalEditionCount,
+    width,
+    detailedProgressBar,
+    isStandalone,
+  } = props;
+
+  const queueDetails: AuthorQueueDetails = useSelector(
+    createAuthorQueueItemsDetailsSelector(authorId, bookNumber)
+  );
+
+  const newDownloads = queueDetails.count - queueDetails.editionsWithFiles;
+  const progress = editionCount ? (editionFileCount / editionCount) * 100 : 100;
+  const text = newDownloads
+    ? `${editionFileCount} + ${newDownloads} / ${editionCount}`
+    : `${editionFileCount} / ${editionCount}`;
+
+  return (
+    <ProgressBar
+      className={styles.progressBar}
+      containerClassName={isStandalone ? undefined : styles.progress}
+      progress={progress}
+      kind={getProgressBarKind(
+        status,
+        monitored,
+        progress,
+        queueDetails.count > 0
+      )}
+      size={detailedProgressBar ? sizes.MEDIUM : sizes.SMALL}
+      showText={detailedProgressBar}
+      text={text}
+      title={translate('AuthorProgressBarText', {
+        editionFileCount,
+        editionCount,
+        totalEditionCount,
+        downloadingCount: queueDetails.count,
+      })}
+      width={width}
+    />
+  );
+}
+
+export default AuthorIndexProgressBar;
