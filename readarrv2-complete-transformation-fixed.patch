+import { useSelector } from 'react-redux';
+import { createSelector } from 'reselect';
+import AppState from 'App/State/AppState';
+import Edition from './Edition';
+
+export type EditionEntity =
+  | 'calendar'
+  | 'editions'
+  | 'interactiveImport.editions'
+  | 'wanted.cutoffUnmet'
+  | 'wanted.missing';
+
+function createEditionSelector(editionId?: number) {
+  return createSelector(
+    (state: AppState) => state.editions.items,
+    (editions) => {
+      return editions.find(({ id }) => id === editionId);
+    }
+  );
+}
+
+function createCalendarEditionSelector(editionId?: number) {
+  return createSelector(
+    (state: AppState) => state.calendar.items as Edition[],
+    (editions) => {
+      return editions.find(({ id }) => id === editionId);
+    }
+  );
+}
+
+function createWantedCutoffUnmetEditionSelector(editionId?: number) {
+  return createSelector(
+    (state: AppState) => state.wanted.cutoffUnmet.items,
+    (editions) => {
+      return editions.find(({ id }) => id === editionId);
+    }
+  );
+}
+
+function createWantedMissingEditionSelector(editionId?: number) {
+  return createSelector(
+    (state: AppState) => state.wanted.missing.items,
+    (editions) => {
+      return editions.find(({ id }) => id === editionId);
+    }
+  );
+}
+
+function useEdition(
+  editionId: number | undefined,
+  editionEntity: EditionEntity
+) {
+  let selector = createEditionSelector;
+
+  switch (editionEntity) {
+    case 'calendar':
+      selector = createCalendarEditionSelector;
+      break;
+    case 'wanted.cutoffUnmet':
+      selector = createWantedCutoffUnmetEditionSelector;
+      break;
+    case 'wanted.missing':
+      selector = createWantedMissingEditionSelector;
+      break;
+    default:
+      break;
+  }
+
+  return useSelector(selector(editionId));
+}
+
+export default useEdition;
