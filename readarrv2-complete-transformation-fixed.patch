+function createAuthorIndexItemSelector(authorId: number) {
+  return createSelector(
+    createAuthorSelectorForHook(authorId),
+    createAuthorQualityProfileSelector(authorId),
+    createExecutingCommandsSelector(),
+    (author: Author, qualityProfile, executingCommands: Command[]) => {
