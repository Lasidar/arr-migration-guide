+import padNumber from 'Utilities/Number/padNumber';
+import filterAlternateTitles from 'Utilities/Author/filterAlternateTitles';
+import translate from 'Utilities/String/translate';
+import SceneInfo from './SceneInfo';
+import styles from './EditionNumber.css';
+
+function getWarningMessage(
+  unverifiedSceneNumbering: boolean,
+  authorType: AuthorType | undefined,
+  absoluteEditionNumber: number | undefined
+) {
+  const messages = [];
+
+  if (unverifiedSceneNumbering) {
+    messages.push(translate('SceneNumberNotVerified'));
+  }
+
+  if (authorType === 'anime' && !absoluteEditionNumber) {
+    messages.push(translate('EditionMissingAbsoluteNumber'));
+  }
+
+  return messages.join('\n');
+}
+
+export interface EditionNumberProps {
+  bookNumber: number;
+  editionNumber: number;
+  absoluteEditionNumber?: number;
+  sceneBookNumber?: number;
+  sceneEditionNumber?: number;
+  sceneAbsoluteEditionNumber?: number;
+  useSceneNumbering?: boolean;
+  unverifiedSceneNumbering?: boolean;
+  alternateTitles?: AlternateTitle[];
+  authorType?: AuthorType;
+  showBookNumber?: boolean;
+}
+
+function EditionNumber(props: EditionNumberProps) {
+  const {
+    bookNumber,
+    editionNumber,
+    absoluteEditionNumber,
+    sceneBookNumber,
+    sceneEditionNumber,
+    sceneAbsoluteEditionNumber,
+    useSceneNumbering = false,
+    unverifiedSceneNumbering = false,
+    alternateTitles: authorAlternateTitles = [],
+    authorType,
+    showBookNumber = false,
+  } = props;
+
+  const alternateTitles = filterAlternateTitles(
+    authorAlternateTitles,
+    null,
+    useSceneNumbering,
+    bookNumber,
+    sceneBookNumber
+  );
+
+  const hasSceneInformation =
+    sceneBookNumber !== undefined ||
+    sceneEditionNumber !== undefined ||
+    (authorType === 'anime' && sceneAbsoluteEditionNumber !== undefined) ||
+    !!alternateTitles.length;
+
+  const warningMessage = getWarningMessage(
+    unverifiedSceneNumbering,
+    authorType,
+    absoluteEditionNumber
+  );
+
+  return (
+    <span>
+      {hasSceneInformation ? (
+        <Popover
+          anchor={
+            <span>
+              {showBookNumber && bookNumber != null && <>{bookNumber}x</>}
+
+              {showBookNumber ? padNumber(editionNumber, 2) : editionNumber}
+
+              {authorType === 'anime' && !!absoluteEditionNumber && (
+                <span className={styles.absoluteEditionNumber}>
+                  ({absoluteEditionNumber})
+                </span>
+              )}
+            </span>
+          }
+          title={translate('SceneInformation')}
+          body={
+            <SceneInfo
+              bookNumber={bookNumber}
+              editionNumber={editionNumber}
+              sceneBookNumber={sceneBookNumber}
+              sceneEditionNumber={sceneEditionNumber}
+              sceneAbsoluteEditionNumber={sceneAbsoluteEditionNumber}
+              alternateTitles={alternateTitles}
+              authorType={authorType}
+            />
+          }
+          position={tooltipPositions.RIGHT}
+        />
+      ) : (
+        <span>
+          {showBookNumber && bookNumber != null && <>{bookNumber}x</>}
+
+          {showBookNumber ? padNumber(editionNumber, 2) : editionNumber}
+
+          {authorType === 'anime' && !!absoluteEditionNumber && (
+            <span className={styles.absoluteEditionNumber}>
+              ({absoluteEditionNumber})
+            </span>
+          )}
+        </span>
+      )}
+
+      {warningMessage ? (
+        <Icon
+          className={styles.warning}
+          name={icons.WARNING}
+          kind={kinds.WARNING}
+          title={warningMessage}
+        />
+      ) : null}
+    </span>
+  );
+}
+
+export default EditionNumber;
